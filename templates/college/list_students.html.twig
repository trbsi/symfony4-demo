{% extends 'base.html.twig' %}

{% block body_id 'add_student' %}

{% block main %}
    <a href="{{ url('add_student') }}">Add student</a>
    <table class="table" border="1" cellpadding="10" cellspacing="10" width="100%">
        <tr>
            <td>City</td>
            <td>Name</td>
            <td>University</td>
            <td>Courses</td>
            <td>Grades</td>
            <td>Edit</td>
        </tr>
    {% for student in students %}
         <tr>
            <td>{{ student.city.name }}</td>
            <td>{{ student.name }}</td>
            <td>{{ student.university.name }}</td>
            <td>
                {% if student.courses|length > 0 %}
                    {% for course in student.courses %}
                        {{course.name}}, 
                    {% endfor %}
                {% else %}
                    NEMA
                {% endif %}
            </td>
            <td>
                {% for grade in student.grades %}
                    {{grade.course.name}} ({{grade.grade}}), 
                {% endfor %}
            </td>
            <td>
                {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN') %}
                    <a href="{{ url('edit_student', {id: student.id}) }}">Edit student</a>
                    <form action="{{url('delete_student', {id: student.id})}}" method="POST">
                         <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
                        <button type="submit">DELETE</button>
                    </form>
                {% endif %}

            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}